<script>

    function hideOnLoad() {
        hideElements(document.getElementsByClassName("assessment"), true);
        hideElements(document.getElementsByClassName("second-client"), true);
    }

    function hideElements(elements, hide) {
        for (let i = 0; i < elements.length; i++) {
            if (hide) {
                elements[i].setAttribute("hidden", true);
            }
            else {
                elements[i].removeAttribute("hidden");
            }
        }
    }

    function noClientSelected() {
        hideElements(document.getElementsByClassName("assessment"), false);
        if (document.forms["risk-tolerance-form"]["no-clients"].value === "2") {
            hideElements(document.getElementsByClassName("second-client"), false);
            setRadioButtonClasses(document.getElementsByClassName("radio-one"), false);
        }
        else {
            hideElements(document.getElementsByClassName("second-client"), true);
            setRadioButtonClasses(document.getElementsByClassName("radio-one"), true);
        }
    }

    function setRadioButtonClasses(elements, oneClient) {
        for (let i = 0; i < elements.length; i++) {
            if (oneClient) {
                elements[i].classList.remove("text-right");
                elements[i].classList.remove("border-right");
                elements[i].classList.add("text-center");
            }
            else {
                elements[i].classList.remove("text-center");
                elements[i].classList.add("text-right");
                elements[i].classList.add("border-right");
            }
        }
    }

    function validateForm() {
        const form = document.forms["risk-tolerance-form"];
        let clientCount = form["no-clients"].value;
        if (!clientCount) {
            return false;
        }
        let formFields = getFormFields(1);
        if (clientCount === "2") {
            formFields = formFields.concat(getFormFields(2));
        }

        let total1 = 0;
        let total2 = 0;
        let hasError = false;
        let isTaxEfficient1 = false;
        let isTaxEfficient2 = false;
        formFields.forEach(field => {
            let value = form[field].value;
            if (!value) {
                hasError = true;
            }
            else {
                if (field.endsWith("1")) {
                    if (field.startsWith("tax-efficiency")) {
                        if (value === "yes") {
                            isTaxEfficient1 = true;
                        }
                    }
                    else {
                        total1 += parseInt(value);
                    }
                }
                else if (field.endsWith("2")) {
                    if (field.startsWith("tax-efficiency")) {
                        if (value === "yes") {
                            isTaxEfficient2 = true;
                        }
                    }
                    else {
                        total2 += parseInt(value);
                    }
                }
            }
        });
        if (hasError) {
            document.getElementById("select-error").removeAttribute("hidden");
            return false;
        }
        else {
            document.getElementById("select-error").setAttribute("hidden", true);
        }

        let risk1 = getRiskPlacement(total1);
        document.getElementById("client-1-total").innerText = "Total Score: " + total1;
        document.getElementById("client-1-risk").innerText = "Risk Level: " + risk1;
        if (clientCount === "2") {
            let risk2 = getRiskPlacement(total2);
            document.getElementById("client-2-total").innerText = "Total Score: " + total2;
            document.getElementById("client-2-risk").innerText = "Risk Level: " + risk2;
            populateModelsTables(risk1, isTaxEfficient1, risk2, isTaxEfficient2);
        }
        else {
            populateModelsTables(risk1, isTaxEfficient1);
        }

        document.getElementById("results").removeAttribute("hidden");
        document.getElementById("submit-button").innerHTML = "Resubmit Assessment";
    }

    function getFormFields(client) {
        return [
            "invest-obj-" + client,
            "invest-years-" + client,
            "gain-loss-" + client,
            "risk-level-" + client,
            "restore-wait-" + client,
            "income-security-" + client,
            "emergency-assets-" + client,
            "tax-efficiency-" + client,
        ];
    }

    function getRiskPlacement(total) {
        switch (true) {
            case (total <= 0) :
                return "";
            case (total <= 17) :
                return "Very Risk Averse";
            case (total <= 34) :
                return "Conservative";
            case (total <= 50) :
                return "Moderate";
            case (total <= 67) :
                return "Balanced";
            case (total <= 84) :
                return "Growth";
            case (total <= 100) :
                return "Aggressive";
            default :
                return "";
        }
    }

    function populateModelsTables(risk1, isTaxEfficient1, risk2 = null, isTaxEfficient2 = null) {
        insertModelOptions("models-table-1", getModels(risk1), isTaxEfficient1);
        if (risk1 === "Very Risk Averse") {
            risk1 = "Conservative"
        }
        if (risk2 === "Very Risk Averse") {
            risk2 = "Conservative"
        }

        document.getElementById("models-table-1-header").innerHTML = "Client 1 (" + risk1 + ")";
        document.getElementById("models-table-2").setAttribute("hidden", true);
        if (risk2) {
            if (risk1 === risk2 && isTaxEfficient1 === isTaxEfficient2) {
                document.getElementById("models-table-1-header").innerHTML = "Client 1 & Client 2 (" + risk1 + ")";
            }
            else {
                insertModelOptions("models-table-2", getModels(risk2), isTaxEfficient2);
                document.getElementById("models-table-2-header").innerHTML = "Client 2 (" + risk2 + ")";
                document.getElementById("models-table-2").removeAttribute("hidden");
            }
        }

        if (risk1 === "Conservative" || risk1 === "Moderate" || risk2 === "Conservative" || risk2 === "Moderate") {
            document.getElementById("models-key").removeAttribute("hidden");
        }
        else {
            document.getElementById("models-key").setAttribute("hidden", true);
        }

    }

    function insertModelOptions(tableId, models, isTaxEfficient) {
        let rows = models.model.length;
        let columns = Object.keys(models).length;

        let table = document.getElementById(tableId);
        while (table.rows.length > 2) {
            table.deleteRow(-1);
        }

        const columnNames = [
            "model",
            "minimum",
            "objective",
            "riskalyze",
            "url",
        ];
        for (let r = 0; r < rows; r++) {
            if (!isTaxEfficient || (isTaxEfficient && !models[columnNames[0]][r].startsWith("Cabana"))) {
                let row = table.insertRow(-1);
                for (let c = 0; c < columns; c++) {
                    let cell = row.insertCell(-1);
                    if (c === columnNames.length - 1) {
                        cell.innerHTML = "<a href='" + models[columnNames[c]][r] + "' target='_blank'>Learn More</a>";
                    }
                    else {
                        cell.innerHTML = models[columnNames[c]][r];
                    }
                }
            }
        }
    }

